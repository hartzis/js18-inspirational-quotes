mainColor = #5be
secondColor = #aaa
headColor = #ddd
quoteColor = #eee
staredColor = #ff0
hoveredColor = #000

.main-container
	margin: 0 auto
	width 75%
	text-align: center

.title
	border-bottom: 2px solid secondColor *1.1
	color headColor
	padding-bottom: 10px

body
	background-color: mainColor

.quote
	color quoteColor
	line-height: 55px

.author
	color quoteColor *2
	text-align left
	display: inline-block
	width 45%

.rate-box
	display: inline-block

.quote-content
	background-color mainColor *1.15
	padding 10px
	z-index: 1
	position: relative

.menu-container
	position: fixed
	background-color: mainColor * 1.15
	right: 0;
	box-shadow: -7px -7px secondColor*1.1
	padding: 10px;

.button
	color quoteColor
	background-color: mainColor * 1.15
	margin 4px
	border-top 1px solid secondColor *1.1
	border-left 1px solid secondColor *1.1
	border-right: 3px solid secondColor
	border-bottom: 3px solid secondColor

.quote-container
	margin 15px auto
	position: relative
	width 85%
	box-shadow: -7px -7px secondColor*1.1

	// &:before
	// 	z-index: 0
