.star
	size 14px
	color quoteColor
	border-top 1px solid quoteColor
	border-bottom 1px solid quoteColor
	cursor: pointer
	padding 2px
	&:hover
		color hoveredColor
	&:first-child
		border-left: 1px solid quoteColor
		padding-left: 4px
	&:last-child
		border-right: 1px solid quoteColor
		padding-right: 4px

.rated
	color staredColor

.outside
	display none
	position: absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color mainColor
	z-index 5

.middle
	position: relative
	padding-top 200px

.center
	margin 0 auto
	width 250px
	text-align: center
	background-color: mainColor * 1.15
	box-shadow: -7px -7px secondColor*1.1
	padding: 10px;
	

.in-container
	margin 5px

.remove
	position: absolute
	right: 0;
	bottom: 0;
	padding: 3px;
	color quoteColor
	border 1px solid quoteColor
	cursor: pointer
